<Window x:Class="VoIPainter.View.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VoIPainter.View"
        mc:Ignorable="d"
        Title="Settings" 
        Height="400" 
        Width="400" 
        ResizeMode="NoResize" 
        WindowStyle="ToolWindow">
    <Grid>
        <Label Content="Resize Mode" 
               HorizontalAlignment="Left" 
               Margin="10,10,0,0" 
               VerticalAlignment="Top"/>
        <ComboBox HorizontalAlignment="Left" 
                  Margin="92,12,0,0" 
                  VerticalAlignment="Top" 
                  Width="120"
                  ItemsSource="{Binding Path=ImageResizeModeNames}"
                  DisplayMemberPath="Value"
                  SelectedValuePath="Key"
                  SelectedValue="{Binding Path=ImageResizeMode, Mode=TwoWay}"/>
    </Grid>
</Window>
